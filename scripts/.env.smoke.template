# Copy this file to .env.smoke and fill in your values

# Required identifiers
PROJECT_ID="demo-project-$(date +%s)"

# Required endpoints (Cloud Run base URLs, without trailing slashes)
UPLOAD_BASE="https://YOUR_UPLOAD_ASSETS_SERVICE.run.app"
NARRATE_BASE="https://YOUR_NARRATE_SERVICE.run.app"
ALIGN_BASE="https://YOUR_ALIGN_SERVICE.run.app"
COMPOSE_BASE="https://YOUR_COMPOSE_MUSIC_SERVICE.run.app"
RENDER_BASE="https://YOUR_RENDER_SERVICE.run.app"
POLISH_BASE="https://YOUR_POLISH_SERVICE.run.app"

# Optional: your hosted app domain to validate share pages (if you have share IDs)
HOST_DOMAIN="https://your-domain.com"

# Security headers
# Get an App Check token for your Firebase web app; required for protected endpoints
APP_CHECK_TOKEN="YOUR_APP_CHECK_TOKEN"
# Optional Firebase ID token for user-scoped operations (e.g., BYO keys in polish)
ID_TOKEN=""

# Test content
# A tiny 1x1 PNG data URI (black pixel)
TEST_IMAGE_DATA_URI="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAQAAAC1HAwCAAAAC0lEQVR4nGNgYAAAAAMAASsJTYQAAAAASUVORK5CYII="
NARRATION_SCRIPT="Once upon a time in a cheerful banana grove, a curious monkey found a golden reel."

# Render options
RENDER_PUBLISHED=false

